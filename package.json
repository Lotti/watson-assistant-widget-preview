{
  "name": "watson-assistant-widget-preview",
  "version": "0.0.2",
  "description": "Injects Watson Assistant Web Chat integration javascript code inside any website",
  "main": "public/js/main.js",
  "homepage": "./",
  "scripts": {
    "react": "react-scripts start",
    "react:build": "react-scripts build",
    "build": "npm run react:build && web-ext build -s=./build --overwrite-dest",
    "lint": "web-ext lint -s=./build",
    "sign": "web-ext sign -s=./build",
    "start": "web-ext run -s=./build",
    "dev": "web-ext run -s=./build -p=dev --keep-profile-changes"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lotti/watson-assistant-widget-preview.git"
  },
  "author": "Valerio Riva",
  "license": "MIT",
  "devDependencies": {
    "web-ext": "^8.9.0"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.6",
    "antd": "^4.6.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "5.0.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
